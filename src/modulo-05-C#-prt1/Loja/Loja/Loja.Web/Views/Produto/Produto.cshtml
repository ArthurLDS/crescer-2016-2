
@{
    ViewBag.Title = "Produto";
}

<section class="container">
    <header><h2>Produtos</h2></header>
    <section class="row">
        <section class="form-group">
            @using (Html.BeginForm("Produto", "Produto", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.TextBox("nome", null, new { @class="form-control", plaseholder="Digite um nome para pesquisar"})
                <button type="submit" class="btn btn-primary">Pesquisar</button>
            }
        </section>
    </section>
    <article class="col-md-12">
        <div class="row">
        
        @{
            foreach (var produto in Model)
            {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@Model.Imagem" alt="produto-imagem" class="img-responsive">
                    <div class="caption">
                        <h3>@Model.Nome</h3>
                        <p>@Model.Valor/p>
                        <p>
                            <a href="#" class="btn btn-success" role="button">Detalhes</a>
                            <a href="#" class="btn btn-primary" role="button">Editar</a>
                            <a href="#" class="btn btn-danger" role="button">Excluir</a>
                        </p>
                    </div>
                </div>
            </div>
                }
        }
        </div>
    </article>
</section>

