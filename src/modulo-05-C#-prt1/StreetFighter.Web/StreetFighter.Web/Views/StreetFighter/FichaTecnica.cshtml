
@{
    ViewBag.Title = "FichaTecnica";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sobre o Desenvolverdor</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/estilo.css">
</head>
<body>
    <nav class="menu-bar">
        <ul style="">
            <li><a href="~/StreetFighter/Index">Início</a></li>
            <li><a href="~/StreetFighter/ListaDePersonagem">Lista de Personagens</a></li>
            <li><a href="~/StreetFighter/Sobre">Sobre</a></li>
        </ul>
    </nav>
    <div class="ficha-tec-container">
        <header>
            <h2 style="margin-top: 8px;">Ficha Técnica</h2>
        </header>

        <div class="container conteudo-ficha-tec">
            <div class="row">
                
                

                <div class="img-cont col-md-5">
                    <img src="@Model.Imagem" alt="Arthur-muito-loko" class="img-responsive">
                </div>
                <div class="descricao-ft col-md-7">
                    <b>ID: </b>@Model.Id<br>
                    <b>Nome: </b>@Model.Nome<br>
                    <b>Nascimento: </b>@Model.DataNascimento.ToLongDateString()<br>
                    <b>Altura: </b>@(Model.Altura + " cm")<br>
                    <b>Peso: </b>@(Model.Peso + " kg")<br>
                    <b>Origem: </b> @Model.Origem<br>
                    <b>Golpes especiais famosos: </b> @Model.GolpesEspeciais<br>
                    <b>Personagem Oculto: </b> @(Model.PersonagemOculto)<br>
                    <a href="~/StreetFighter/EditarPersonagem?id=@Model.Id"><button class="btn btn-success btn-editar">Editar personagem</button></a>
                </div>

            </div>
        </div>
    </div>

</body>
</html>

